<%- layout("/boilerplate.ejs") %>

<body class="d-flex flex-column min-vh-100">
    <!-- views/startupForm.ejs -->
<h2 class="mt-3">Startup Registration</h2>
<form action="/register/startup" method="POST">
  <div class="form-group mt-3">
    <label for="name">Startup Name</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>
  
  <div class="form-group mt-3">
    <label for="description">Description</label>
    <textarea class="form-control" id="description" name="description" required></textarea>
  </div>
  
  <div class="form-group mt-3">
    <label for="logo">Logo</label>
    <input type="text" class="form-control" id="logo" name="logo">
  </div>
  
  <div class="form-group mt-3">
    <label for="industry">Industry</label>
    <select class="form-control" id="industry" name="industry" required>
      <option>Ayurveda</option>
      <option>Yoga</option>
      <option>Naturopathy</option>
      <option>Unani</option>
      <option>Siddha</option>
      <option>Homeopathy</option>
    </select>
  </div>

  <div class="form-group mt-3">
    <label for="founderName">Founder Name</label>
    <input type="text" class="form-control" id="founderName" name="founderName" required>
  </div>

  <div class="form-group mt-3">
    <label for="foundedYear">Founded Year</label>
    <input type="number" class="form-control" id="foundedYear" name="foundedYear" min="1900" max="2024" required>
  </div>

  <div class="form-group mt-3">
    <label for="location">Location</label>
    <input type="text" class="form-control" id="location" name="location" required>
  </div>

  <!-- Contact Info -->
  <h3 class="mt-5">Contact Information</h3>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" id="email" name="contactInfo.email" required>
  </div>
  <div class="form-group">
    <label for="phone">Phone</label>
    <input type="text" class="form-control" id="phone" name="contactInfo.phone">
  </div>
  <div class="form-group">
    <label for="website">Website</label>
    <input type="url" class="form-control" id="website" name="contactInfo.website">
  </div>

  <!-- Funding Info -->
  <h3 class="mt-5">Funding Information</h3>
  <div class="form-group">
    <label for="fundingStage">Funding Stage</label>
    <select class="form-control" id="fundingStage" name="fundingInfo.fundingStage" required>
      <option>Pre-seed</option>
      <option>Seed</option>
      <option>Series A</option>
      <option>Series B</option>
      <option>Bootstrapped</option>
    </select>
  </div>
  <div class="form-group mt-2">
    <label for="fundingRaised">Funding Raised</label>
    <input type="number" class="form-control" id="fundingRaised" name="fundingInfo.fundingRaised">
  </div>
  <div class="form-group mt-2">
    <label for="investmentRequired">Investment Required</label>
    <input type="number" class="form-control" id="investmentRequired" name="fundingInfo.investmentRequired">
  </div>

  <!-- Operational Details -->
  <h3 class="mt-5">Operational Details</h3>
  <div class="form-group">
    <label for="teamSize">Team Size</label>
    <input type="number" class="form-control" id="teamSize" name="operationalDetails.teamSize">
  </div>
  <div class="form-group">
    <label for="revenueModel">Revenue Model</label>
    <input type="text" class="form-control" id="revenueModel" name="operationalDetails.revenueModel">
  </div>
  <div class="form-group">
    <label for="visionMission">Vision & Mission</label>
    <textarea class="form-control" id="visionMission" name="operationalDetails.visionMission"></textarea>
  </div>
  <div class="form-group">
    <label for="status">Status</label>
    <select class="form-control" id="status" name="operationalDetails.status" required>
      <option>Active</option>
      <option>Closed</option>
      <option>Acquired</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary mt-4 mb-3">Submit</button>
</form>

</body>
<%- layout("/boilerplate.ejs") %>

<body class="d-flex flex-column min-vh-100">
<h2 class="mt-3">Startup Registration</h2>
<form action="/register/startup" novalidate class="needs-validation" method="POST" enctype="multipart/form-data">
  <div class="form-group mt-3">
    <label for="name" class="form-label">Startup Name</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>
  
  <div class="form-group mt-3">
    <label for="description" class="form-label">Description</label>
    <textarea class="form-control" id="description" name="description" required></textarea>
  </div>
  
  <div class="form-group mt-3">
    <label for="logo" class="form-label">Logo</label>
    <input type="file" class="form-control" id="logo" name="logo">
  </div>
  
  <div class="form-group mt-3">
    <label for="industry" class="form-label" required>Industry</label>
    <select class="form-control" id="industry" name="industry" required>
      <option>Ayurveda</option>
      <option>Yoga</option>
      <option>Naturopathy</option>
      <option>Unani</option>
      <option>Siddha</option>
      <option>Homeopathy</option>
    </select>
  </div>

  <div class="form-group mt-3">
    <label for="founderName" class="form-label">Founder Name</label>
    <input type="text" class="form-control" id="founderName" name="founderName" required>
  </div>

  <div class="form-group mt-3">
    <label for="foundedYear" class="form-label">Founded Year</label>
    <input type="number" class="form-control" id="foundedYear" name="foundedYear" min="1900" max="2024" required>
  </div>

  <div class="form-group mt-3">
    <label for="location" class="form-label">Location</label>
    <input type="text" class="form-control" id="location" name="location" required>
  </div>

  <!-- Contact Info -->
  <h3 class="mt-5">Contact Information</h3>
  <div class="form-group">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" id="email" name="contactInfo[email]" value="<%= registeredUser.email %>" required>
  </div>
  <div class="form-group">
    <label for="phone" class="form-label">Phone</label>
    <input type="text" class="form-control" id="phone" name="contactInfo[phone]" required>
  </div>
  <div class="form-group">
    <label for="website" class="form-label">Website</label>
    <input type="url" class="form-control" id="website" name="contactInfo[website]">
  </div>

  <!-- Funding Info -->
  <h3 class="mt-5">Funding Information</h3>
  <div class="form-group">
    <label for="fundingStage" class="form-label">Funding Stage</label>
    <select class="form-control" id="fundingStage" name="fundingInfo[fundingStage]" required>
      <option>Pre-seed</option>
      <option>Seed</option>
      <option>Series A</option>
      <option>Series B</option>
      <option>Bootstrapped</option>
    </select>
  </div>
  <div class="form-group mt-2">
    <label for="fundingRaised" class="form-label">Funding Raised</label>
    <input type="number" class="form-control" id="fundingRaised" name="fundingInfo[fundingRaised]" required>
  </div>
  <div class="form-group mt-2">
    <label for="investmentRequired" class="form-label">Investment Required</label>
    <input type="number" class="form-control" id="investmentRequired" name="fundingInfo[investmentRequired]" required>
  </div>

  <!-- Operational Details -->
  <h3 class="mt-5">Operational Details</h3>
  <div class="form-group">
    <label for="teamSize" class="form-label">Team Size</label>
    <input type="number" class="form-control" id="teamSize" name="operationalDetails[teamSize]" required>
  </div>
  <div class="form-group">
    <label for="revenueModel" class="form-label">Revenue Model</label>
    <input type="text" class="form-control" id="revenueModel" name="operationalDetails[revenueModel]" required>
  </div>
  <div class="form-group">
    <label for="visionMission" class="form-label">Vision & Mission</label>
    <textarea class="form-control" id="visionMission" name="operationalDetails[visionMission]"></textarea>
  </div>
  <div class="form-group">
    <label for="status" class="form-label">Status</label>
    <select class="form-control" id="status" name="operationalDetails[status]" required>
      <option>Active</option>
      <option>Closed</option>
      <option>Acquired</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary mt-4 mb-3">Submit</button>
</form>

</body>




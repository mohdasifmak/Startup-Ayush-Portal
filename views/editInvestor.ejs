<%- layout("/boilerplate.ejs") %>

<body>
    <div class="container mt-3">
        <h1>Update Information</h1>
        <form action="/investor/update/<%= investor._id %>" method="POST">
            <div class="form-group mt-2">
                <label for="name">Name:</label>
                <input type="text" class="form-control" name="name" value="<%= investor.name %>" required>
            </div>
            <div class="form-group mt-2">
                <label for="industry">Industry:</label>
                <input type="text" class="form-control" name="industry" value="<%= investor.industry %>" required>
            </div>
            <div class="form-group mt-2">
                <label for="contactInfo.email">Email:</label>
                <input type="email" class="form-control" name="contactInfo.email" value="<%= investor.contactInfo.email %>" required>
            </div>
            <div class="form-group mt-2">
                <label for="contactInfo.phone">Phone:</label>
                <input type="tel" class="form-control" name="contactInfo.phone" value="<%= investor.contactInfo.phone %>" required>
            </div>
            <div class="form-group mt-2">
                <label for="website">Website:</label>
                <input type="url" class="form-control" name="contactInfo.website" value="<%= investor.contactInfo.website %>">
            </div>
            <div class="form-group mt-2">
                <label for="investmentAreas">Investment Areas:</label>
                <input type="text" class="form-control" name="investmentAreas" value="<%= investor.investmentAreas.join(', ') %>" placeholder="Comma separated values">
            </div>
            <div class="form-group mt-2">
                <label for="fundingRange.min">Funding Range (Min):</label>
                <input type="number" class="form-control" name="fundingRange.min" value="<%= investor.fundingRange.min %>" required>
            </div>
            <div class="form-group mt-2">
                <label for="fundingRange.max">Funding Range (Max):</label>
                <input type="number" class="form-control" name="fundingRange.max" value="<%= investor.fundingRange.max %>" required>
            </div>
            <div class="form-group mt-2">
                <label for="location.city">Location (City):</label>
                <input type="text" class="form-control" name="location.city" value="<%= investor.location.city %>" required>
            </div>
            <div class="form-group mt-2">
                <label for="location.state">Location (State):</label>
                <input type="text" class="form-control" name="location.state" value="<%= investor.location.state %>" required>
            </div>
            <div class="form-group mt-2">
                <label for="location.country">Location (Country):</label>
                <input type="text" class="form-control" name="location.country" value="<%= investor.location.country %>" required>
            </div>
            <button type="submit" class="btn btn-primary mt-3 mb-3">Update Investor</button>
        </form>
    </div>
</body>


<%- layout("/boilerplate.ejs") %>

<body class="d-flex flex-column min-vh-100">
  <% if (error_message  && error_message.length > 0) { %>
    <div class="alert alert-danger">
      <%= error_message %>
    </div>
  <% } %>
  
  <% if (success_message && success_message.length > 0) { %>
    <div class="alert alert-success">
      <%= success_message %>
    </div>
<% } %>
  <div class="container">
    <h1 class="my-4"><%= mentor.name %></h1>
    <div class="row">
      <div class="col-md-4">
        <img src="<%= mentor.logoUrl.url %>" class="img-fluid mb-4" alt="<%= mentor.name %>">
      </div>
      <div class="col-md-8">
        <h3>About <%= mentor.name %></h3>
        <p><%= mentor.bio %></p>
        <h4>Contact Information</h4>
        <ul>
          <li><strong>Email:</strong> <%= mentor.email %></li>
          <li><strong>Phone:</strong> <%= mentor.phone %></li>
        </ul>
        <h4>Availability</h4>
        <p><%= mentor.availability %></p>
      </div>
    </div>

    <div class="d-flex justify-content-between">
     
      <% if(currUser && currUser._id.equals(mentor.owner._id)) {%> 
      <div class="d-flex mt-2">
          <div class="mt-3">
              <a href="/mentor/update/<%= mentor._id %>" class=" btn btn-primary">Update Profile</a>
          </div>
          <div class="mt-3 ms-2">
              <form action="/mentor/delete/<%= mentor._id %>" method="POST" onsubmit="return confirm('You want to delete your Profile?');">
                  <button type="submit" class="btn btn-danger">Delete Profile</button>
              </form>
          </div>
      </div>
      <% } %>
      
      
      <!-- Right side (Back to Mentor Listings) -->
      <div>
          <a href="/mentors" class="btn btn-primary mt-4 mb-3">Back to Mentor Listings</a>
      </div>
  </div>  
    
  </div>
</body>
